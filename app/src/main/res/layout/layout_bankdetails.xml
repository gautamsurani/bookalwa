<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/toolbar_ID"
        layout="@layout/toolbar_simple"></include>

    <RelativeLayout
        android:layout_below="@+id/toolbar_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <customclass.MyTextView
            android:id="@+id/txtBankMsg"
            android:gravity="left"
            android:text="sacsadsddd"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvBankDetails"
            android:layout_width="match_parent"
            android:layout_below="@+id/txtBankMsg"
            android:layout_height="match_parent"
            android:background="@color/cattextcolour"
            android:elevation="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scrollbars="vertical" />
    </RelativeLayout>
</RelativeLayout>
