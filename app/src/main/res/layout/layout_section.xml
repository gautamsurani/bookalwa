<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/secCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:animateLayoutChanges="true"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:contentPadding="@dimen/_7sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/sectionIMG"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:src="@drawable/facebook" />

        <TextView
            android:id="@+id/text_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_toEndOf="@+id/sectionIMG"
            android:layout_toLeftOf="@+id/toggle_button_section"
            android:layout_toRightOf="@+id/sectionIMG"
            android:layout_toStartOf="@+id/toggle_button_section"
            android:gravity="center|start"
            android:padding="@dimen/_5sdp"
            android:text="333333333333333333"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />


        <ToggleButton
            android:id="@+id/toggle_button_section"
            style="@style/toggleButton"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_toggle_bg" />

    </RelativeLayout>

</android.support.v7.widget.CardView>