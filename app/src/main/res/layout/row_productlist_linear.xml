<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/rect">

    <LinearLayout
        android:id="@+id/lv_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp">


        <ImageView
            android:id="@+id/imgMainImg"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:src="@drawable/nextlist" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <customclass.MyTextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Canvera Black Heel"
                android:textColor="@color/Tex"
                android:textSize="14dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <customclass.MyTextView

                    android:id="@+id/txtMrp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="dvdsv"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <customclass.MyTextView

                    android:id="@+id/txtMrp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:maxLines="1"
                    android:text="dvdv"

                    android:textColor="@color/textSub"
                    android:textSize="11dp"

                    />


            </LinearLayout>

            <customclass.MyTextView
                android:id="@+id/txtstock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="in stock"
                android:textColor="#2e9c03"
                android:textSize="12dp" />


            <LinearLayout
                android:id="@+id/msgLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_gravity="start"
                    android:paddingTop="@dimen/_1sdp"
                    android:src="@drawable/info" />

                <customclass.MyTextView
                    android:id="@+id/txtextra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Canvera Black Heel\nhhhhhh"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="12dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/imagFav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:src="@mipmap/fav_selcted" />


    <ImageView
        android:id="@+id/imgSoldOut"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:gravity="end"
        android:scaleType="fitXY"
        android:src="@drawable/soldoutimage" />

</RelativeLayout>