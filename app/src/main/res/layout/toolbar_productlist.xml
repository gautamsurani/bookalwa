<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <customclass.MyTextView
            android:id="@+id/eshop"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:layout_gravity="center_vertical"
            android:textColor="@color/cattextcolour"
            android:textSize="@dimen/menu_text"
            />

        <ImageView
            android:id="@+id/searchclick"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"

            />

        <RelativeLayout
            android:id="@+id/relMyCart"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bag"
                android:padding="10dp"

                />

            <customclass.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bagnumberbg"

                android:layout_marginLeft="29dp"
                android:textColor="@color/cattextcolour"
                android:id="@+id/tvmytotalitems" />

        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.Toolbar>


